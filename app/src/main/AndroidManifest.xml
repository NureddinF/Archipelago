<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xuhongcheng.archipelago.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:theme="@style/AppTheme"
        xmlns:tools="http://schemas.android.com/tools"
        tools:replace="android:theme"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="com.example.xuhongcheng.archipelago.activitys.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.xuhongcheng.archipelago.activitys.RegisterActivity" />
        <activity android:name="com.example.xuhongcheng.archipelago.activitys.MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.example.xuhongcheng.archipelago.activitys.SettingActivity" />

        <activity
            android:name="com.example.xuhongcheng.archipelago.activitys.SinglePlayerActivity"
            android:parentActivityName="com.example.xuhongcheng.archipelago.activitys.MainActivity"/>
        <activity android:name="com.example.xuhongcheng.archipelago.activitys.ProfileActivity"/>
        <activity android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:launchMode="singleTask"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection"
            android:name="com.MobileComputingGrp3.UnityPlayerActivity"
            android:parentActivityName="com.example.xuhongcheng.archipelago.activitys.MainActivity">
            <meta-data android:name="unityplayer.UnityActivity" android:value="true" />
        </activity>
    </application>

</manifest>